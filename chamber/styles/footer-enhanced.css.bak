
.footer-company-info a[href^="tel:"],
.footer-company-info a[href^="mailto:"] {
    color: var(--color-link-footer);
    font-weight: 800;
    background-color: rgba(0, 0, 0, 0.3);
    padding: 4px 8px;
    border-radius: 4px;
    display: inline-block;
    margin: 3px 0;
    text-decoration: none;
    font-size: 1.05rem;
    letter-spacing: 0.02em;
    border: 1px solid rgba(255, 255, 255, 0.3);
}

.footer-company-info a[href^="tel:"]:hover,
.footer-company-info a[href^="mailto:"]:hover,
.footer-company-info a[href^="tel:"]:focus,
.footer-company-info a[href^="mailto:"]:focus {
    color: var(--color-text-white);
    background-color: rgba(0, 0, 0, 0.5);
    text-decoration: underline;
    box-shadow: 0 0 0 2px rgba(255, 255, 255, 0.3);
}


body.dark-mode .footer-company-info a[href^="tel:"],
body.dark-mode .footer-company-info a[href^="mailto:"] {
    background-color: rgba(255, 255, 255, 0.2);
    border-color: rgba(255, 255, 255, 0.4);
}

body.dark-mode .footer-company-info a[href^="tel:"]:hover,
body.dark-mode .footer-company-info a[href^="mailto:"]:hover,
body.dark-mode .footer-company-info a[href^="tel:"]:focus,
body.dark-mode .footer-company-info a[href^="mailto:"]:focus {
    background-color: rgba(255, 255, 255, 0.3);
    box-shadow: 0 0 0 2px rgba(255, 255, 255, 0.5);
}
